{
  "name": "OpenMemory",
  "description": "Self-hosted long-term AI memory engine (TypeScript)",
  "repository": "https://github.com/lucivskvn/openmemory-OSS",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "NODE_ENV": {
      "value": "production"
    },
    "OM_PORT": {
      "value": "8080"
    },
    "OM_API_KEY": {
      "description": "Secure API key"
    },
    "OPENAI_API_KEY": {
      "description": "OpenAI embedding key"
    }
  },
  "scripts": {
    "postdeploy": "bun run build"
  }
}
