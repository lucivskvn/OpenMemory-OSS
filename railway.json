{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "rootDir": "backend",
        "buildCommand": "npm install && npm run build"
    },
    "deploy": {
        "startCommand": "npm start",
        "restartPolicyType": "ON_FAILURE",
        "healthcheckPath": "/api/system/health"
    },
    "env": {
        "NODE_ENV": "production"
    }
}