{
    "name": "openmemory-backend",
    "version": "1.2.0",
    "author": "nullure",
    "bin": {
        "opm": "./bin/opm.js"
    },
    "scripts": {
        "dev": "bun --hot src/server/index.ts",
        "build": "bun build src/server/index.ts --target=bun --outdir=dist",
        "start": "bun dist/server/index.js",
        "migrate": "bun run src/migrate.ts",
        "build:binary": "bun build --compile --minify --sourcemap src/server/index.ts --outfile openmemory",
        "type-check": "bun tsc --noEmit",
        "clean": "rm -rf dist/ node_modules/.cache/"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.20.2",
        "better-sqlite3": "^12.4.1",
        "dotenv": "^16.4.5",
        "mammoth": "^1.11.0",
        "pdf-parse": "^2.4.3",
        "pg": "^8.16.3",
        "turndown": "^7.2.1",
        "ws": "^8.18.3",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/node": "^20.10.5",
        "@types/pg": "^8.15.5",
        "typescript": "^5.6.3"
    }
}
