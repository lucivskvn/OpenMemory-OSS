{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noEmit": false,
        "allowImportingTsExtensions": false,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "allowJs": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "incremental": true,
        "tsBuildInfoFile": ".tsbuildinfo",
        "types": [
            "bun"
        ]
    },
    "include": [
        "src",
        "scripts",
        "verify_*.ts",
        "test"
    ],
    "exclude": [
        "node_modules",
        "src/server/public/js/dashboard.js",
        "dist"
    ]
}