{
    "name": "openmemory-backend",
    "version": "1.3.1",
    "author": "nullure",
    "bin": {
        "opm": "./bin/opm.js"
    },
    "scripts": {
        "dev": "bun --hot src/server/index.ts",
        "format": "bunx -p prettier@3.3.3 prettier --write .",
        "build": "bun build src/server/index.ts --target=bun --outfile dist/server/index.js",
        "build:binary": "bun build src/server/index.ts --compile --minify --sourcemap --target=bun --outfile=./dist/openmemory",
        "start": "bun dist/server/index.js",
        "migrate": "bun src/migrate.ts",
        "test": "OM_DB_USER_SCOPE_WARN=false OM_TEST_MODE=1 OM_SKIP_BACKGROUND=true bun test -r ../tests/setup.ts ../tests/backend/",
        "test:ci": "OM_DB_USER_SCOPE_WARN=false OM_TEST_MODE=1 OM_SKIP_BACKGROUND=true bun test -r ../tests/setup.ts --coverage --reporter=json",
        "test:simd": "OM_DB_USER_SCOPE_WARN=false bun test ../tests/backend/simd.test.ts",
        "test:router": "OM_DB_USER_SCOPE_WARN=false bun test ../tests/backend/embed-router.test.ts",
        "test:config": "OM_DB_USER_SCOPE_WARN=false bun test ../tests/backend/embed-config-endpoint.test.ts",
        "test:e2e": "OM_DB_USER_SCOPE_WARN=false OM_TEST_MODE=1 bun test ../tests/e2e/",
        "test:benchmarks": "OM_RUN_BENCHMARK_TESTS=true OM_DB_USER_SCOPE_WARN=false bun test ../tests/benchmarks/",
        "test:all": "bun run test && bun run test:e2e && bun run test:benchmarks",
        "benchmark:report": "bun ../scripts/benchmark-utils.ts report",
        "benchmark:compare": "bun ../scripts/benchmark-utils.ts compare",
        "benchmark:cleanup": "bun ../scripts/benchmark-utils.ts cleanup",
        "test:mint22": "echo 'Running tests on Linux Mint 22 (Ubuntu 24.04 base)' && bun run test:all",
        "benchmark:embed": "OM_DB_USER_SCOPE_WARN=false bun test ../tests/backend/simd.test.ts --grep 'benchmark'",
        "hash-key": "bun run scripts/hash-api-key.ts",
        "security:scan": "bun pm ls --all | grep -i 'deprecated\\|vulnerability' || echo 'No issues found'",
        "deps:outdated": "bun pm outdated",
        "deps:update": "bun update",
        "backup:create": "bun scripts/create-backup.ts",
        "backup:list": "bun scripts/list-backups.ts",
        "backup:restore": "bun scripts/restore-backup.ts",
        "backup:test": "OM_DB_USER_SCOPE_WARN=false OM_TEST_MODE=1 OM_SKIP_BACKGROUND=true bun test -r ../tests/setup.ts ../tests/backend/backup.test.ts"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.934.0",
        "@modelcontextprotocol/sdk": "^1.22.0",
        "@xenova/transformers": "^2.17.2",
        "mammoth": "^1.6.0",
        "node-cron": "^3.0.3",
        "pdf-parse": "^1.1.1",
        "pg": "^8.13.1",
        "pino": "^10.1.0",
        "pino-pretty": "^9.4.1",
        "turndown": "^7.2.2",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@types/bun": "1.3.2",
        "@types/node": "^24.0.0",
        "@types/turndown": "5.0.6",
        "pdfkit": "^0.13.0",
        "typescript": "^5.6.3"
    },
    "engines": {
        "bun": ">=1.3.2",
        "node": ">=22.12.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/lucivskvn/openmemory-OSS.git"
    },
    "bugs": {
        "url": "https://github.com/lucivskvn/openmemory-OSS/issues"
    },
    "homepage": "https://github.com/lucivskvn/openmemory-OSS#readme"
}
