{
    "name": "openmemory-js",
    "version": "2.1.0",
    "author": "nullure",
    "bin": {
        "opm": "./dist/cli.js",
        "openmemory-js": "./dist/cli.js"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "dev": "bun --hot src/server/index.ts",
        "dev:mcp": "bun --hot src/ai/mcp.ts",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "build": "bun build ./src/server/index.ts ./src/index.ts ./src/ai/mcp.ts ./src/cli.ts --outdir ./dist --target bun",
        "start": "bun dist/server/index.js",
        "start:mcp": "bun dist/ai/mcp.js",
        "migrate": "bun dist/cli.js migrate",
        "test": "bun test"
    },
    "dependencies": {
        "@azure/msal-node": "^2.16.3",
        "@modelcontextprotocol/sdk": "^1.0.1",
        "@notionhq/client": "^2.3.0",
        "@octokit/rest": "^20.0.0",
        "cheerio": "^1.0.0-rc.12",
        "fluent-ffmpeg": "^2.1.3",
        "googleapis": "^140.0.0",
        "ioredis": "^5.4.1",
        "mammoth": "^1.7.2",
        "openai": "^4.73.0",
        "pdf-parse": "^1.1.1",
        "pg": "^8.11.5",
        "turndown": "^7.1.3",
        "yaml": "^2.4.5",
        "zod": "^3.23.0"
    },
    "devDependencies": {
        "@types/bun": "^1.3.5",
        "@types/cheerio": "^0.22.35",
        "@types/fluent-ffmpeg": "^2.1.28",
        "@types/pg": "^8.16.0",
        "prettier": "^3.7.4",
        "typescript": "^5.9.3"
    }
}