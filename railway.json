{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "rootDir": "backend",
    "buildCommand": "bun install && bun run build"
    },
    "deploy": {
    "startCommand": "bun run start",
        "restartPolicyType": "ON_FAILURE",
        "healthcheckPath": "/"
    },
    "env": {
        "NODE_ENV": "production"
    }
}