{
    "name": "openmemory-vscode",
    "displayName": "OpenMemory for VS Code",
    "description": "Cognitive memory system that remembers your coding context across sessions",
    "version": "2.3.0",
    "publisher": "Nullure",
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.104.0"
    },
    "categories": [
        "Machine Learning",
        "Other"
    ],
    "keywords": [
        "AI",
        "Memory",
        "Context",
        "Copilot",
        "Cursor",
        "Claude",
        "LLM"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/caviraoss/openmemory"
    },
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "openmemory.statusBarClick",
                "title": "OpenMemory: Status Bar Menu"
            },
            {
                "command": "openmemory.queryContext",
                "title": "OpenMemory: Query Context"
            },
            {
                "command": "openmemory.addToMemory",
                "title": "OpenMemory: Add Selection to Memory"
            },
            {
                "command": "openmemory.quickNote",
                "title": "OpenMemory: Quick Note"
            },
            {
                "command": "openmemory.viewPatterns",
                "title": "OpenMemory: View Patterns"
            },
            {
                "command": "openmemory.toggleTracking",
                "title": "OpenMemory: Toggle Tracking"
            },
            {
                "command": "openmemory.setup",
                "title": "OpenMemory: Setup"
            },
            {
                "command": "openmemory.dashboard",
                "title": "OpenMemory: Dashboard"
            },
            {
                "command": "openmemory.ingestItem",
                "title": "OpenMemory: Ingest into Memory"
            }
        ],
        "configuration": {
            "title": "OpenMemory",
            "properties": {
                "openmemory.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable or disable OpenMemory tracking and features"
                },
                "openmemory.backendUrl": {
                    "type": "string",
                    "default": "http://localhost:8080",
                    "description": "URL of the OpenMemory backend server"
                },
                "openmemory.apiKey": {
                    "type": "string",
                    "default": "",
                    "description": "API key for OpenMemory backend authentication (leave empty if no auth required)"
                },
                "openmemory.useMCP": {
                    "type": "boolean",
                    "default": false,
                    "description": "Use MCP protocol for AI tool integration instead of direct HTTP"
                },
                "openmemory.mcpServerPath": {
                    "type": "string",
                    "default": "",
                    "description": "Path to MCP server executable (leave empty to use built-in backend MCP)"
                },
                "openmemory.userId": {
                    "type": "string",
                    "default": "",
                    "description": "Custom User ID for OpenMemory (leave empty to auto-generate)"
                },
                "openmemory.projectName": {
                    "type": "string",
                    "default": "",
                    "description": "Custom Project Name (leave empty to use workspace name)"
                }
            }
        },
        "menus": {
            "explorer/context": [
                {
                    "command": "openmemory.ingestItem",
                    "group": "openmemory",
                    "when": "resourceScheme == file"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "bun run compile",
        "compile": "bun x tsc -p ./",
        "watch": "bun x tsc -watch -p ./",
        "pretest": "bun run compile",
        "lint": "bun x eslint .",
        "postinstall": "bun postinstall.js"
    },
    "dependencies": {
        "openmemory-js": "workspace:*"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.3",
        "@eslint/js": "^9.39.2",
        "@types/node": "^20.x",
        "@types/vscode": "^1.104.0",
        "@typescript-eslint/eslint-plugin": "^8.52.0",
        "@typescript-eslint/parser": "^8.52.0",
        "eslint": "^9.39.2",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.52.0"
    }
}