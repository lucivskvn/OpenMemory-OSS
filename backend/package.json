{
    "name": "openmemory-backend",
    "version": "1.2.2",
    "author": "nullure",
    "bin": {
        "opm": "./bin/opm.js"
    },
    "scripts": {
        "dev": "bun --hot src/server/index.ts",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "build": "bun build ./src/server/index.ts --outdir ./dist --target bun",
        "build:mcp": "bun build ./src/ai/mcp.ts --outfile ./dist/mcp.js --target bun",
        "start": "bun --smol dist/index.js",
        "migrate": "bun src/migrate.ts",
        "test": "bun test"
    },
    "dependencies": {
        "@aws-sdk/client-bedrock-runtime": "3.958.0",
        "@elysiajs/cors": "^1.4.0",
        "@modelcontextprotocol/sdk": "1.25.1",
        "@types/uuid": "^11.0.0",
        "elysia": "^1.4.19",
        "fluent-ffmpeg": "^2.1.3",
        "ioredis": "^5.8.2",
        "js-yaml": "^4.1.1",
        "mammoth": "^1.11.0",
        "openai": "^6.0.0",
        "pdf-parse": "^2.4.5",
        "pg": "^8.16.3",
        "turndown": "^7.2.2",
        "uuid": "^13.0.0",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@types/bun": "1.3.5",
        "@types/fluent-ffmpeg": "^2.1.26",
        "@types/js-yaml": "^4.0.9",
        "@types/pdf-parse": "^1.1.5",
        "@types/turndown": "^5.0.6",
        "prettier": "3.7.4",
        "typescript": "^5.9.3"
    }
}
