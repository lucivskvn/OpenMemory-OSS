{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "node",
        "allowImportingTsExtensions": true,
        // TypeScript requires either noEmit or emitDeclarationOnly when allowing imports that end in .ts
        "noEmit": true,
        "outDir": "dist",
        "allowJs": true,
        "checkJs": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "downlevelIteration": true,
        "strict": true,
        "skipLibCheck": true,
        "types": [
            "@types/node",
            "@types/bun"
        ],
        "lib": [
            "ES2022",
            "DOM"
        ]
    },
    "include": [
        "src",
        "src/types",
        "../tests"
    ]
}
