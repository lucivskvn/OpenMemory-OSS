# Production Configuration Template
OM_MODE=production
OM_API_KEY=<required>
OM_ADMIN_KEY=<required>

# Database
OM_METADATA_BACKEND=postgres
OM_PG_HOST=<required>
OM_PG_PORT=5432
OM_PG_DB=openmemory_prod
OM_PG_USER=<required>
OM_PG_PASSWORD=<required>
OM_PG_SSL=require
OM_PG_POOL_MAX=20

# Security
OM_ENCRYPTION_ENABLED=true
OM_ENCRYPTION_KEY=<required>
OM_ENCRYPTION_KEY_SECONDARY=<optional-for-rotation>

# Performance
OM_REQUEST_TIMEOUT=30000
OM_CACHE_SEGMENTS=1000
OM_WAYPOINT_BUDGET=10000

# Monitoring
OM_TELEMETRY_ENABLED=true
OM_METRICS_PORT=9090

# Rate Limiting
OM_RATE_LIMIT_ENABLED=true
OM_RATE_LIMIT_MAX=100
OM_RATE_LIMIT_WINDOW=60000
