{
    "name": "openmemory-backend",
    "version": "1.3.0",
    "author": "nullure",
    "bin": {
        "opm": "./bin/opm.js"
    },
    "scripts": {
        "dev": "bun --hot src/server/index.ts",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "build": "bun build src/server/index.ts src/migrate.ts --target=bun --outdir=dist --format=esm",
        "start": "bun dist/server/index.js",
        "migrate": "bun src/migrate.ts",
        "test": "bun test ../tests/backend/",
        "hash-key": "bun run scripts/hash-api-key.ts"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.20.2",
        "mammoth": "^1.11.0",
        "pdf-parse": "^2.4.3",
        "pino": "^10.1.0",
        "turndown": "^7.2.1",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "pdfkit": "^0.13.0",
        "@types/bun": "latest",
        "@types/node": "^20.10.5",
        
        "prettier": "^3.6.2",
        "typescript": "^5.6.3"
    },
    "engines": {
        "bun": ">=1.3.2"
    }
}