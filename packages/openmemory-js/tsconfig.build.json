{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "noEmit": false,
        "declaration": true,
        "emitDeclarationOnly": true,
        "skipLibCheck": true,
        "allowImportingTsExtensions": false,
        "isolatedModules": true,
        "incremental": true,
        "tsBuildInfoFile": ".tsbuildinfo.build",
        "types": [
            "bun-types"
        ]
    },
    "include": [
        "src/index.ts",
        "src/client.ts",
        "src/clients/**/*.ts",
        "src/core/types/**/*.ts"
    ],
    "exclude": [
        "src/server",
        "src/ops",
        "src/ai",
        "src/sources",
        "src/temporal_graph",
        "src/cli",
        "src/memory",
        "src/utils",
        "tests",
        "**/*.test.ts",
        "node_modules",
        "dist"
    ]
}