{
    "name": "openmemory-js",
    "version": "2.3.2",
    "description": "Real long-term memory for AI agents (MCP, Temporal Graph, Semantic Search). Self-hosted & Local-first.",
    "keywords": [
        "ai",
        "memory",
        "mcp",
        "agents",
        "llm",
        "vector-database",
        "graph-database",
        "semantic-search",
        "cognitive-architecture",
        "rag"
    ],
    "author": "nullure",
    "homepage": "https://openmemory.cavira.app",
    "repository": {
        "type": "git",
        "url": "https://github.com/CaviraOSS/OpenMemory.git"
    },
    "license": "Apache-2.0",
    "bin": {
        "opm": "./dist/cli.js",
        "openmemory-js": "./dist/cli.js"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./client": {
            "types": "./dist/client.d.ts",
            "default": "./dist/client.js"
        },
        "./ai/graph": {
            "types": "./dist/ai/graph.d.ts",
            "default": "./dist/ai/graph.js"
        },
        "./ai/mcp": {
            "types": "./dist/ai/mcp.d.ts",
            "default": "./dist/ai/mcp.js"
        },
        "./server": {
            "types": "./dist/server/start.d.ts",
            "default": "./dist/server/start.js"
        }
    },
    "scripts": {
        "dev": "bun --hot src/server/start.ts",
        "dev:mcp": "bun --hot src/ai/mcp.ts",
        "format": "bun x prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "lint": "NODE_OPTIONS='--max-old-space-size=8192' bun x eslint src/**/*.ts",
        "build": "bun scripts/build.ts",
        "start": "bun dist/server/start.js",
        "start:mcp": "bun dist/ai/mcp.js",
        "migrate": "bun dist/cli.js migrate",
        "test": "bun test --timeout 30000",
        "test:coverage": "c8 --reporter=text --reporter=html --reporter=lcov bun test --timeout 30000",
        "test:coverage:check": "c8 --check-coverage --lines 85 --functions 80 --branches 75 --statements 85 bun test --timeout 30000",
        "test:resilient": "bun scripts/test-runner.ts",
        "test:docker": "bash scripts/test-docker.sh",
        "test:core": "bun test --timeout 15000 ./test/core/db.test.ts ./test/core/security.test.ts",
        "test:memory": "bun test --timeout 25000 ./test/phase2-memory-engine.test.ts",
        "test:server": "bun test --timeout 15000 ./tests/server_smoke.test.ts",
        "test:integration": "bun test --timeout 30000 ./test/integration/coreInfra.test.ts ./test/integration/dedup.test.ts",
        "test:performance": "bun test --timeout 45000 ./test/performance/",
        "test:properties": "bun test --timeout 60000 ./test/property/",
        "typecheck": "NODE_OPTIONS='--max-old-space-size=12288' bun run build",
        "typecheck:tsc": "NODE_OPTIONS='--max-old-space-size=12288' bun x tsc --noEmit --skipLibCheck",
        "clean": "rm -rf dist .tsbuildinfo",
        "cleanup:test": "bun scripts/cleanup-test-artifacts.ts",
        "cleanup:test:dry": "bun scripts/cleanup-test-artifacts.ts --dry-run",
        "cleanup:test:all": "bun scripts/cleanup-test-artifacts.ts --node-modules",
        "coverage": "bun scripts/coverage-report.ts",
        "coverage:html": "bun scripts/coverage-report.ts --html",
        "coverage:check": "bun scripts/coverage-report.ts --check",
        "coverage:critical": "bun scripts/coverage-report.ts --critical --check"
    },
    "dependencies": {
        "@anthropic-ai/sdk": "^0.71.2",
        "@aws-sdk/client-bedrock-runtime": "^3.972.0",
        "@azure/msal-node": "^3.8.6",
        "@elysiajs/cors": "^1.4.1",
        "@elysiajs/static": "^1.4.7",
        "@huggingface/transformers": "^3.8.1",
        "@modelcontextprotocol/sdk": "^1.25.3",
        "@notionhq/client": "^5.7.0",
        "@octokit/rest": "^22.0.1",
        "cheerio": "^1.1.2",
        "elysia": "^1.4.22",
        "fluent-ffmpeg": "^2.1.3",
        "googleapis": "^170.1.0",
        "ioredis": "^5.9.2",
        "mammoth": "^1.11.0",
        "openai": "^6.16.0",
        "pdf-parse": "^2.4.5",
        "pg": "^8.17.2",
        "turndown": "^7.2.2",
        "yaml": "^2.8.2",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@types/bun": "^1.3.6",
        "@types/fluent-ffmpeg": "^2.1.28",
        "@types/node": "^22.19.7",
        "@types/pg": "^8.16.0",
        "@types/turndown": "^5.0.6",
        "@typescript-eslint/eslint-plugin": "^8.53.1",
        "@typescript-eslint/parser": "^8.53.1",
        "c8": "^10.1.2",
        "eslint": "^9.39.2",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-unused-imports": "^4.3.0",
        "fast-check": "^4.5.3",
        "prettier": "^3.8.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.53.1"
    }
}