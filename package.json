{
    "name": "openmemory-monorepo",
    "private": true,
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "build": "bun run --filter '*' build",
        "test": "bun run --filter '*' test",
        "lint": "bun run --filter '*' lint",
        "dev": "bun run --cwd packages/openmemory-js dev",
        "dev:dashboard": "bun run --cwd apps/dashboard dev",
        "typecheck": "bun run --filter '*' typecheck",
        "test:js": "bun run --filter './packages/openmemory-js' --filter './apps/dashboard' test",
        "audit:deps": "bun run scripts/dependency-audit.ts",
        "audit:js": "bun run scripts/dependency-audit.ts javascript",
        "audit:py": "bun run scripts/dependency-audit.ts python",
        "audit:consistency": "bun run scripts/dependency-audit.ts consistency",
        "security:scan": "bun run audit:deps && bun run --cwd packages/openmemory-py security:all"
    },
    "devDependencies": {
        "bun-types": "1.3.6"
    }
}