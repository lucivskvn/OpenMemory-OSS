# Server Configuration
NODE_ENV=production
OM_PORT=3000
OM_VERBOSE=false
OM_MAX_PAYLOAD_SIZE=1048576 # 1MB

# Database Configuration (PostgreSQL Recommended for Production)
OM_METADATA_BACKEND=postgres
OM_PG_HOST=localhost
OM_PG_PORT=5432
OM_PG_USER=openmemory
OM_PG_PASSWORD=secure_password_here
OM_PG_DB=openmemory
OM_PG_SSL=require

# Vector Store (PostgreSQL with pgvector)
OM_VECTOR_BACKEND=postgres
OM_VECTOR_TABLE=vectors

# Security
OM_API_KEY_SALT=change_this_to_random_string

# LLM Provider Configuration
OM_LLM_PROVIDER=openai
OM_OPENAI_KEY=sk-...

# Monitoring
OM_ENABLE_METRICS=true
